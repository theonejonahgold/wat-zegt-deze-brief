{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2015",
		"moduleResolution": "node",
		"allowJs": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"importHelpers": true,
		"baseUrl": "src",
		"paths": {
			"$config/*": [
				"config/*"
			],
			"$utils": [
				"utils"
			],
			"$router": [
				"router"
			],
			"$types/*": [
				"types/*"
			]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}
