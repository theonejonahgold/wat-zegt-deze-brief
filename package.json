{
	"name": "wzdb",
	"description": "",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev": "concurrently 'npm:dev:fe' 'npm:dev:be'",
		"dev:fe": "npm --workspace front-end run dev",
		"dev:be": "npm --workspace back-end run dev",
		"lint": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"workspaces": [
		"back-end",
		"front-end"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/theonejonahgold/wat-zegt-deze-brief"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/theonejonahgold/wat-zegt-deze-brief/issues"
	},
	"homepage": "https://github.com/theonejonahgold/wat-zegt-deze-brief#readme",
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"concurrently": "^6.1.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"postinstall-postinstall": "^2.1.0",
		"prettier": "^2.3.0",
		"prettier-plugin-svelte": "^2.3.0"
	},
	"lint-staged": {
		"*.{js,css,md,svelte}": "prettier --plugin-search-dir=. --write"
	}
}
